{
  "name": "@terra-money/price-server",
  "version": "2.0.0",
  "main": "src/main.ts",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts",
    "test": "jest",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.0.3",
    "@opentelemetry/exporter-prometheus": "^0.26.0",
    "@opentelemetry/metrics": "^0.23.0",
    "@polka/send-type": "^0.5.2",
    "@sentry/node": "^6.13.3",
    "bignumber.js": "^9.0.1",
    "bluebird": "^3.7.2",
    "config": "^3.3.6",
    "csv-writer": "^1.6.0",
    "date-fns": "^2.25.0",
    "form-data": "^4.0.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.0.0",
    "pako": "^2.0.4",
    "polka": "^0.5.2",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node-fetch": "^3.0.2",
    "@types/sinon": "^10.0.4",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.2",
    "prettier": "^2.4.1",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.5"
  },
  "engines": {
    "node": ">=14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "./src/**/*.{json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "parser": "typescript",
    "printWidth": 100,
    "singleQuote": true,
    "semi": false
  }
}
